{{> header}}

<main class='products-container'>
  <section class='products-header-infomation'>
    <div class='products-header-information-amount'>{{products_amount}} Products founded</div>
    <div class='products-header-information-pagination'>
      {{#if hasPrevPage}}
        <i class='fa-solid fa-chevron-left transition' onclick='window.location.href="{{prevPage}}"'></i>
      {{/if}}
      <div class='products-header-information-pagination-pages'>{{page}}/{{totalPages}}</div>
      {{#if hasNextPage}}
        <i class='fa-solid fa-chevron-right transition' onclick='window.location.href="{{nextPage}}"'></i>
      {{/if}}
    </div>
  </section>
  <section class='products-list'>
    {{#each products}}
      <div class='products-item'>
        <div class='products-item-img'>
          <img src='{{thumbnail}}' alt='' />
        </div>
        <div class='products-item-middle'>
          <div>
            <div class='products-item-title'>{{title}}</div>
            <div class='products-item-category'>{{category}}</div>
          </div>
          <button class='products-item-add-cart-btn transition main-font-bold' type='submit' onclick='window.__productsFn.addToCart(this,"{{../this.cid}}", "{{_id}}")'>ADD TO CART</button>
        </div>
        <div class='products-item-end'>
          <div class='products-item-price'>${{price}}</div>
          <div class='products-item-stock'>{{stock}} Offers</div>
        </div>
      </div>
    {{/each}}
  </section>
</main>

<script src='/js/products.js' type="module"></script>